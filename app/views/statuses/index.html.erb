<div class="hero-unit">
  <h1>Welcome to Color Me!</h1>
  <p>Come join us and share your favorite colors!</p>
  <p>
    <%= link_to "Post a New Status", new_status_path, class: "btn btn-info btn-large" %>
  </p>
</div>

<% @statuses.each do |status| %>
<div class="status">
  <div class="row">
    <div class="span1">
      <%= image_tag status.user.gravatar_url, class: "img-polaroid" %>
    </div>
    <div class="span7">
      <strong><%= status.user.full_name %></strong>
      <p><%= status.content %></p>
      <div class="meta">
        <%= link_to time_ago_in_words(status.created_at) + " ago", status %>
        <span class="admin">
            | <%= link_to "Edit", edit_status_path(status) %> |
            <%= link_to "Delete", status, method: :delete, data: {confirm: "Are you sure you want to delete this status?"} %>
        </span>
      </div>
    </div>
  </div>
</div>
<% end %>